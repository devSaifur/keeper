{
  "version": 2,
  "buildCommand": "pnpm run build",
  "outputDirectory": "dist",
  "functions": {
    "server/dist/index.js": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/server/dist/index.js"
    },
    {
      "source": "/(.*)",
      "destination": "/dist/$1"
    }
  ]
}
